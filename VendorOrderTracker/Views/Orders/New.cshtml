@{
  Layout = "_Layout";
}

<h1>Add a New Order for @Model.Name</h1>

<br>
<br>

 <form action="/vendors/@Model.Id/orders" method ="post">
    <label for="title">Title:</label>
    <input id="title" name="title" type="text" required>
    <br>
    <label for="description">Description:</label>
    <input id="description" name="description" type="text" required>
    <br>
    <label for="quantity">Quantity:</label>
    <input id="quantity" name="quantity" type="number" min=1 required>
    <br>
    <label for="price">Price:</label>
    <input id="price" name="price" type="number" min=1 required>
    <br>
    <label for="date">Date:</label>
    <input id="date" name="date" type="string" required>
    <br>
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id" required>
    <br>
    <button type="submit">Add</button>
  </form>

  <br>
  <br>

  <h4><a href='/vendors/@Model.Id'>View Current Vendor: @Model.Name</a></h4>
  <h4><a href='/vendors'>View All Vendors</a></h4>
  <h4><a href='/'>Return to Main Page</a></h4>