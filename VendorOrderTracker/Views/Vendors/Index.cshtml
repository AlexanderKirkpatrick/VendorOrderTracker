@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>Vendors List</h1>
<br>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<br>

<h4><a href='/vendors/new'>Add a New Vendor</a></h4>

<h4><a href='/'>Return to Main Page</a></h4>